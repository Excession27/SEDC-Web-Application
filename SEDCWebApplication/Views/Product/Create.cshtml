@model ProductCreateViewModel

@{
    ViewBag.Title = "Create Product";
}

<form asp-controller="product" enctype="multipart/form-data" asp-action="create" method="post">
    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" placeholder="Product name" class="form-control" />
            <span asp-validation-for="ProductName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UnitPrice" placeholder="Email" class="form-control" />
            <span asp-validation-for="UnitPrice"></span>
        </div>
    </div>



    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" placeholder="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose File...</label>
            </div>

            <span asp-validation-for="Photo"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <div asp-validation-summary="All" class="text-danger"></div>

    @section Scripts{ 
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }


</form>
