@model EmployeeUpdateViewModel 

@{
    ViewBag.Title = "Edit Employee";
}

<form asp-controller="Employee" enctype="multipart/form-data" asp-action="Edit" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" placeholder="Id" class="form-control" value="@Model.Id" disabled/>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" placeholder="Name" class="form-control" value="@Model.Name"/>
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Role" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Role" placeholder="Role" class="form-control" asp-items="Html.GetEnumSelectList<RoleEnum>()">
            </select>
            <span asp-validation-for="Role"></span>
        </div>
    </div>

    <div class="form-group row">
        <img src="@Model.ImagePath" />
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" placeholder="Photo" class="form-control custom-file-input" value="@Model.ImagePath"/>
                <label class="custom-file-label">Choose File...</label>
            </div>

            <span asp-validation-for="Photo"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
    <div asp-validation-summary="All" class="text-danger"></div>

    @section Scripts{ 
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }


</form>
